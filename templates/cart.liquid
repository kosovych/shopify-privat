{% include 'page-header', title: 'Card' %}

<section class="cart-area section">
    <div class="cart shopping">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-2">
            <div class="block">
              <div class="product-list">
                <form method="post">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Item Name</th>
                        <th class="text-center">Quantity</th>
                        <th>Item Price</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                    {% for line_item in cart.items %}
                      <tr>
                        <td>
                          <div class="product-info">
                            <img width="80" src="{{ line_item | img_url: '1920x' }}" alt="{{ line_item.title }}">
                            <a href="{{line_item.url}}">{{ line_item.title }}</a>
                          </div>
                        </td>
                        <td>
                          <input type="number" name="updates[]" class="btn btn-default" value={{ line_item.quantity }} min="0" />
                        </td>
                        <td>{{ line_item.line_price | money }}</td>
                        <td>
                          <a class="product-remove" href="/cart/change/?line={{forloop.index}}&quantity=0" rel="{{ line_item.id }}">Remove</a>
                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                  <div class="row justify-content-end cart-total">
                    <div class="col-md-2">
                      Total
                    </div>
                    <div class="col-md-2">
                      {{ cart.total_price | money }}
                    </div>
                  </div>
                  <input name="checkout" type="submit" class="btn btn-main pull-right" value="Checkout" />
                  <input name="update" type="submit" id="update-btn" class="btn btn-transparent pull-right" value="Update" />
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
