
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      {% for block in section.blocks %}
        {% if forloop.index == 1 %}
          <li data-target="#carouselExampleIndicators" data-slide-to="{{forloop.index}}" class="active"></li>
        {% else %}
          <li data-target="#carouselExampleIndicators" data-slide-to="{{forloop.index}}" class=""></li>
        {% endif %}
      {% endfor %}

    </ol>
    <div class="carousel-inner">
        {% for block in section.blocks %}
          {% if forloop.index == 1 %}
            <div class="carousel-item active">
              <img class="d-block w-100" src="{{block.settings.image | img_url: '1920x'}}">
            </div>
          {% else %}
            <div class="carousel-item">
              <img class="d-block w-100" src="{{block.settings.image | img_url: '1920x'}}">
            </div>
          {% endif %}
        {% endfor %}

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

{% schema %}
  {
    "blocks": [
      {
        "name": "Main Carousel",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Slide"
          }
        ]
      }
    ]
  }
{% endschema %}
