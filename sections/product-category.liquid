  <section class="product-category">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title text-center">
            <h2>{{section.settings.product_category_header}}</h2>
          </div>
        </div>
        <div class="col-md-6">
          <div class="category-box">
            <a href={{section.settings.product_category_top_left_link}}>
              <img src="{{ section.settings.product_category_bottom_left_img | img_url: '1920x'}}" alt="">
              <div class="content">
                <h3>{{section.settings.product_category_top_left_header}}</h3>
                <p>{{section.settings.product_category_top_left_txt}}</p>
              </div>
            </a>  
          </div>
          <div class="category-box">
            <a href={{section.settings.product_category_right_link}}>
              <img src="{{ section.settings.product_category_top_left_img | img_url: '1920x'}}" alt="">
              <div class="content">
                <h3>{{section.settings.product_category_bottom_left_header}}</h3>
                <p>{{section.settings.product_category_bottom_left_txt}}</p>
              </div>
            </a>  
          </div>
        </div>

        <div class="col-md-6">
          <div class="category-box category-box-2">
            <a href={{section.settings.product_category_bottom_left_link}}>
              <img src="{{ section.settings.product_category_right_img | img_url: '1920x'}}" alt="">
              <div class="content">
                <h3>{{section.settings.product_category_right_header}}</h3>
                <p>{{section.settings.product_category_right_txt}}</p>
              </div>
            </a>  
          </div>
        </div>
      </div>
    </div>
  </section>

