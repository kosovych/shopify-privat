      {
        "type": "text",
        "id": "product_category_right_txt",
        "label": "Product Category Right Text",
        "default": "Shop New Season Clothing"
      },
      {
        "type": "image_picker",
        "id": "product_category_right_img",
        "label": "Product Category Right Image"
      },
      {
        "type": "url",
        "id": "product_category_right_link",
        "label": "Product Category Right Link"
      },
      {
        "type": "text",
        "id": "product_category_bottom_left_header",
        "label": "Product Category Bottom Left Header",
        "default": "Clothes Sales"
      },
      {
        "type": "text",
        "id": "product_category_bottom_left_txt",
        "label": "Product Category Bottom Left Text",
